{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>sublimelsp/renovate-preset"
  ],
  "npm": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchManagers": [
        "pep621"
      ],
      "matchPackageNames": [
        "esphome"
      ],
      "separateMajorMinor": false,
      "commitMessageExtra": "to v{{{prettyNewVersion}}}"
    }
  ]
}
